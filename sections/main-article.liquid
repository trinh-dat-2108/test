<div class="page-width page-width--narrow article-template">
  <div class="article-template__content">

    <h1 class="article-template__title h1">{{ article.title }}</h1>

    <div class="article-template__meta" style="margin: 16px 0; color: #666; font-size: 14px;">
      Đăng ngày {{ article.published_at | date: "%d/%m/%Y" }}
      {% if article.author %} • Bởi {{ article.author }}{% endif %}
    </div>

    {% if article.image %}
      {% assign img_width = article.image.width %}
      {% assign img_height = article.image.height %}

      <div
        class="article-template__image"
        style="margin-bottom: 32px; border-radius: 12px; overflow: hidden; aspect-ratio: {{ img_width }} / {{ img_height }};"
      >
        <img
          src="{{ article.image | img_url: 'master' }}"
          alt="{{ article.image.alt | escape }}"
          width="{{ img_width }}"
          height="{{ img_height }}"
          loading="lazy"
          decoding="async"
          style="width: 100%; height: auto; display: block; object-fit: cover;"
        >
      </div>
    {% endif %}

    <div class="rte article-template__body">
      {{ article.content }}
    </div>

    {%- if article.previous or article.next -%}
  <div class="article-nav">

    <div class="article-nav__prev">
      {% if article.previous %}
        <a href="{{ article.previous.url }}">
          <span class="article-nav__label">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M15 18l-6-6 6-6" fill="none" stroke="currentColor" stroke-width="2"/>
            </svg>
            Bài trước
          </span>
          <span class="article-nav__title">
            {{ article.previous.title }}
          </span>
        </a>
      {% endif %}
    </div>

    <div class="article-nav__center">
      <a href="{{ blog.url }}" class="article-nav__blog">
        Về blog
      </a>
    </div>

    <div class="article-nav__next">
      {% if article.next %}
        <a href="{{ article.next.url }}">
          <span class="article-nav__label">
            Bài tiếp theo
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M9 6l6 6-6 6" fill="none" stroke="currentColor" stroke-width="2"/>
            </svg>
          </span>
          <span class="article-nav__title">
            {{ article.next.title }}
          </span>
        </a>
      {% endif %}
    </div>

  </div>
{%- endif -%}


  </div>
</div>

<style>
  .page-width--narrow {
    max-width: 800px;
    margin: 60px auto;
    padding: 0 20px;
  }

  @media (max-width: 768px) {
    .page-width--narrow {
      margin: 40px auto;
      padding: 0 16px;
    }
  }

  /* ===== Article navigation ===== */
  .article-nav {
  margin-top: 80px;
  padding-top: 40px;
  border-top: 1px solid #eee;

  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
}

.article-nav a {
  text-decoration: none;
  color: #111;
}

.article-nav__label {
  display: flex;
  align-items: center;
  gap: 6px;

  font-size: 13px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: #e60023;
}

.article-nav__label svg {
  width: 16px;
  height: 16px;
}

.article-nav__title {
  display: block;
  margin-top: 6px;

  font-size: 15px;
  font-weight: 500;
  color: #111;
}

.article-nav__prev {
  text-align: left;
}

.article-nav__next {
  text-align: right;
}

.article-nav__center {
  text-align: center;
}

.article-nav__blog {
  padding: 10px 28px;
  border: 2px solid #e60023;
  border-radius: 999px;

  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  color: #e60023;

  transition: all 0.25s ease;
}

.article-nav__blog:hover {
  background: #e60023;
  color: #fff;
}

/* Mobile */
@media (max-width: 768px) {
  .article-nav {
    grid-template-columns: 1fr;
    gap: 24px;
    text-align: center;
  }

  .article-nav__prev,
  .article-nav__next {
    text-align: center;
  }
}

</style>

{% schema %}
{
  "name": "Main article",
  "settings": []
}
{% endschema %}
