{% comment %}
  Section Name: About Us Wrapper
  Description: Container rỗng cho trang About Us. Dùng để add các section con bên trong.
{% endcomment %}

<section class="about-us-wrapper" style="background: {{ section.settings.bg_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="page-width page-width--narrow">
    <!-- Không render nội dung mặc định nào cả -->
    <!-- Nội dung sẽ được add từ các section con -->
  </div>
</section>

<style>
  .about-us-wrapper {
    color: {{ section.settings.text_color }};
  }
</style>

{% schema %}
{
  "name": "About Us Wrapper",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Màu nền",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Màu chữ mặc định (nếu section con dùng)",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Khoảng cách trên",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Khoảng cách dưới",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "About Us Wrapper"
    }
  ]
}
{% endschema %}