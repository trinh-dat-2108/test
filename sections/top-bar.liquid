<div class="topbar">
  <div class="topbar__inner">

    <div class="topbar__left"></div>

    <div class="topbar__center">
      <div class="topbar__text">
        <h2 class="h2">
          {{ section.settings.topbar_center_text }}
        </h2>
      </div>
    </div>

    <div class="topbar__right">
      <div class="topbar__text">
        <h2 class="h2">
          {{ section.settings.topbar_right_text }}
        </h2>
      </div>

     {% if section.settings.topbar_show_social %}
         <ul class="topbar__social-list">

            {% if section.settings.topbar_facebook_link != blank %}
             <li class="topbar__social-item">
                 <a href="{{ section.settings.topbar_facebook_link }}"
                   class="topbar__social-link"
                   target="_blank"
                   rel="noopener noreferrer"
                   aria-label="Facebook">
                         <svg xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="currentColor">
                          <path d="M22 12.07C22 6.48 17.52 2 12 2S2 6.48 2 12.07
                          c0 4.99 3.66 9.13 8.44 9.93v-7.03H8.08v-2.9h2.36V9.86
                          c0-2.33 1.38-3.62 3.5-3.62.99 0 2.03.18 2.03.18v2.24h-1.14
                          c-1.12 0-1.47.7-1.47 1.42v1.7h2.5l-.4 2.9h-2.1v7.03
                          C18.34 21.2 22 17.06 22 12.07z"/>
                         </svg>
                 </a>
             </li>
            {% endif %}

            {% if section.settings.topbar_instagram_link != blank %}
              <li class="topbar__social-item">
                <a href="{{ section.settings.topbar_instagram_link }}"
                  class="topbar__social-link"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="Instagram">
                  <svg xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor">
                    <path d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10
                     c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm10 2
                     c1.65 0 3 1.35 3 3v10c0 1.65-1.35 3-3 3H7
                     c-1.65 0-3-1.35-3-3V7c0-1.65 1.35-3 3-3h10zm-5 3
                     c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5
                    -2.24-5-5-5zm0 2c1.66 0 3 1.34 3 3
                    s-1.34 3-3 3-3-1.34-3-3
                    1.34-3 3-3zm4.5-3
                    a1.5 1.5 0 100 3
                    1.5 1.5 0 000-3z"/>
                   </svg>
                </a>
             </li>
            {% endif %}

         </ul>
     {% endif %}

    </div>

  </div>
</div>

{% schema %}
{
  "name": "Top Bar",
  "settings": [
    {
      "type": "text",
      "id": "topbar_center_text",
      "label": "Center Text",
      "default": "Welcome to Garden of Wellness Shop"
    },
    {
      "type": "text",
      "id": "topbar_right_text",
      "label": "Right Text",
      "default": "Free Shipping on All Orders"
    },
    {
      "type": "text",
      "id": "topbar_facebook_link",
      "label": "Facebook URL",
      "default": "https://facebook.com"
    },
    {
      "type": "text",
      "id": "topbar_instagram_link",
      "label": "Instagram URL",
      "default": "https://instagram.com"
    },
    {
      "type": "checkbox",
      "id": "topbar_show_social",
      "label": "Show Social Icons",
      "default": true
    },
    {
  "type": "color",
  "id": "topbar_background_color",
  "label": "Top Bar Background Color",
  "default": "#ffffff"
},
{
  "type": "color",
  "id": "topbar_text_color",
  "label": "Text Color",
  "default": "#000000"
},
{
  "type": "range",
  "id": "topbar_text_size",
  "label": "Text Size (px)",
  "min": 10,
  "max": 30,
  "step": 1,
  "default": 16
}

  ],
  "presets": [
    {
      "name": "Top Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
<style>
  .topbar {
    background-color: {{ section.settings.topbar_background_color }};
    color: {{ section.settings.topbar_text_color }};
  }

  .topbar h2,
  .topbar__text {
    color: {{ section.settings.topbar_text_color }};
    font-size: {{ section.settings.topbar_text_size }}px;
  }

  .topbar__social-link svg {
    color: {{ section.settings.topbar_text_color }};
  }
</style>

