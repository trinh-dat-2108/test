<div class="section_header py-12">
  {% assign menu = linklists[section.settings.header_menu].links %}

  {% if section.settings.menu_title != blank %}
    <h2 class="text-lg font-medium mb-3">
      {{ section.settings.menu_title }}
    </h2>
  {% endif %}

  <nav>
    <ul class="flex items-center justify-center gap-6">
      {% for link in menu %}
        <li class="relative group">
          <a href="{{ link.url }}" class="no-underline hover:no-underline">
            {{ link.title }}
          </a>

          {% if link.links.size > 0 %}
            <!-- LEVEL 2 -->
            <ul class="absolute left-0 top-full hidden group-hover:block bg-white shadow-md min-w-[180px]">
              {% for child in link.links %}
                <li class="relative group/child">
                  <a href="{{ child.url }}" class="block px-4 py-2 hover:bg-gray-100">
                    {{ child.title }}
                  </a>

                  {% if child.links.size > 0 %}
                    <!-- LEVEL 3 -->
                    <ul class="absolute left-full top-0 hidden group-hover/child:block bg-white shadow-md min-w-[180px]">
                      {% for grandchild in child.links %}
                        <li>
                          <a href="{{ grandchild.url }}" class="block px-4 py-2 hover:bg-gray-100">
                            {{ grandchild.title }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
</div>

{% schema %}
{
  "name": "Header Menu",
  "settings": [
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu title",
      "default": "Menu"
    },
    {
      "type": "link_list",
      "id": "header_menu",
      "label": "Select menu"
    }
  ]
}
{% endschema %}