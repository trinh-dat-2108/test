<section class="privacy-policy-section">
  <!-- Hero Image + Title -->
  <div class="privacy-hero" style="position: relative; height: {{ section.settings.hero_height }}px; overflow: hidden;">
    {% if section.settings.hero_image %}
      {% assign img_w = section.settings.hero_image.width %}
      {% assign img_h = section.settings.hero_image.height %}

      <img
        src="{{ section.settings.hero_image | img_url: 'master' }}"
        alt="{{ section.settings.hero_image.alt | escape }}"
        width="{{ img_w }}"
        height="{{ img_h }}"
        loading="lazy"
        decoding="async"
        style="width: 100%; height: 100%; object-fit: cover; display: block;"
      >
    {% endif %}

    <!-- Title chồng lên ảnh -->
    {% if section.settings.show_title %}
      <h1 class="privacy-title"
          style="
            position: absolute;
            top: {{ section.settings.title_top }}%;
            left: {{ section.settings.title_left }}%;
            transform: translate(-50%, -50%);
            font-size: {{ section.settings.title_size }}px;
            color: {{ section.settings.title_color }};
            text-align: center;
            margin: 0;
            font-weight: 900;
            letter-spacing: 4px;
            text-shadow: 0 4px 8px rgba(0,0,0,0.6);
            z-index: 2;
            line-height: 1.2;
          ">
        SALVARITY® PRIVACY POLICY
      </h1>
    {% endif %}
  </div>

  <!-- Nội dung chính - nhỏ, căn giữa -->
  <div class="page-width page-width--narrow" style="padding-top: 120px; padding-bottom: 120px;">
    <div class="rte policy-content" style="font-size: 16px; line-height: 1.6; color: {{ section.settings.text_color }}; max-width: 800px; margin: 0 auto; text-align: left;">
      {{ page.content }}
    </div>
  </div>
</section>

<style>
  .privacy-hero {
    background: linear-gradient(to right, #004d40, #00796b); /* Gradient fallback */
  }
  .privacy-title {
    font-family: 'Arial Black', sans-serif;
    text-transform: uppercase;
  }
  .policy-content h2, .policy-content h3 {
    font-weight: 600;
    margin: 48px 0 24px;
    text-align: left;
  }
  .policy-content p {
    margin-bottom: 20px;
  }
  .policy-content ul {
    list-style-type: disc;
    margin-left: 0;
    padding-left: 40px;
    margin-bottom: 20px;
    text-align: left;
  }
  .policy-content li {
    margin-bottom: 12px;
  }

  @media (max-width: 768px) {
    .privacy-hero {
      height: calc({{ section.settings.hero_height }}px * 0.6);
    }
    .privacy-title {
      font-size: calc({{ section.settings.title_size }}px * 0.8);
    }
    .policy-content {
      font-size: 14px !important;
      padding-left: 20px;
      padding-right: 20px;
    }
    .policy-content ul {
      padding-left: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Privacy Policy",
  "presets": [
    {
      "name": "Privacy Policy"
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Ảnh header (hero image)"
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 300,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Chiều cao header",
      "default": 500
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Hiển thị tiêu đề chồng lên ảnh",
      "default": true
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Cỡ chữ tiêu đề",
      "default": 48
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Màu chữ tiêu đề",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "title_top",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Vị trí top của tiêu đề",
      "default": 50
    },
    {
      "type": "range",
      "id": "title_left",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Vị trí left/right của tiêu đề",
      "default": 50
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Màu nội dung",
      "default": "#333"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 14,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Cỡ chữ nội dung",
      "default": 16
    }
  ]
}
{% endschema %}