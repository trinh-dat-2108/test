  "name": "Meet Our Team",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "pre_title",
      "label": "Dòng chữ nhỏ (eyebrow)",
      "default": "INSPIRED BY TEENS. DEVELOPED BY EXPERTS. VALIDATED BY SCIENCE."
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Tiêu đề chính",
      "default": "MEET OUR TEAM"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Mô tả phần giữa",
      "default": "<p>Our team of scientists, researchers, and formulators bring decades of expertise to every product.</p>"
    },
    {
      "type": "image_picker",
      "id": "center_logo",
