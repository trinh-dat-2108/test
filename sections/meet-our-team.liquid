<section class="meet-team" style="background: {{ section.settings.bg_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container" style="max-width: 1400px; margin: 0 auto; padding: 0 20px;">

    <!-- THANH NGANG TR√äN ƒê·∫¶U -->
    <div class="top-divider" style="
      width: {{ section.settings.top_divider_width }}%;
      height: {{ section.settings.top_divider_thickness }}px;
      background: {{ section.settings.top_divider_color }};
      margin: 0 auto 80px;
    "></div>

    <!-- GRID CH√çNH -->
    <div class="meet-team__grid">

      <!-- LEFT SIDE -->
      <div class="meet-team__side meet-team__side--left">
        {% for block in section.blocks %}
          {% assign mod = forloop.index0 | modulo: 4 %}
          {% if mod == 0 or mod == 2 %}
            <div class="meet-team__person" {{ block.shopify_attributes }}>
              <div class="meet-team__photo">
                {% if block.settings.image %}
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.name | escape }}"
                    loading="lazy"
                    width="auto"
                    height="auto"
                  >
                {% endif %}
              </div>
              <h3 class="meet-team__name">{{ block.settings.name }}</h3>
              <p class="meet-team__cred">{{ block.settings.title }}</p>
              <div class="meet-team__bio rte">{{ block.settings.description }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- CENTER STICKY -->
      <div class="meet-team__center">
        {% if section.settings.pre_title != blank %}
          <p class="meet-team__eyebrow">{{ section.settings.pre_title }}</p>
        {% endif %}

        {% if section.settings.main_title != blank %}
          <h2 class="meet-team__heading">{{ section.settings.main_title }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="meet-team__desc rte">
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.center_logo %}
          <div class="center-logo" style="margin-top: 40px;">
            <img
              src="{{ section.settings.center_logo | image_url: width: 300 }}"
              alt="Logo"
              loading="lazy"
              style="width: {{ section.settings.logo_size }}px; height: auto;"
              width="auto"
              height="auto"
            >
          </div>
        {% endif %}
      </div>

      <!-- RIGHT SIDE -->
      <div class="meet-team__side meet-team__side--right">
        {% for block in section.blocks %}
          {% assign mod = forloop.index0 | modulo: 4 %}
          {% if mod == 1 or mod == 3 %}
            <div class="meet-team__person" {{ block.shopify_attributes }}>
              <div class="meet-team__photo">
                {% if block.settings.image %}
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.name | escape }}"
                    loading="lazy"
                    width="autu"
                    height="auto"
                  >
                {% endif %}
              </div>
              <h3 class="meet-team__name">{{ block.settings.name }}</h3>
              <p class="meet-team__cred">{{ block.settings.title }}</p>
              <div class="meet-team__bio rte">{{ block.settings.description }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</section>

<style>
/* ===============================
   ENSURE STICKY WORKS PROPERLY
=============================== */

.meet-team,
.container,
.meet-team__grid {
  overflow: visible !important;
}

/* ===============================
   GRID
=============================== */
.meet-team__grid {
  display: grid;
  grid-template-columns: 1fr minmax(260px, 420px) 1fr;
  gap: 56px;
  align-items: start;
}

/* ===============================
   CENTER STICKY
=============================== */
.meet-team__center {
  position: sticky;
  top: 140px;
  align-self: start;
  text-align: center;
  padding-top: 8px;
  z-index: 10;
}

/* ===============================
   SIDE COLUMNS
=============================== */
.meet-team__side {
  position: sticky;
  top: 140px;
  align-self: start;

  display: flex;
  flex-direction: column;
  gap: 28px;
}

/* ===============================
   PERSON CARD ‚Äî FIX HEIGHT
=============================== */
.meet-team__person {
  display: flex;
  flex-direction: column;
  gap: 12px;

  height: 680px;          /* üî• FIX CHI·ªÄU CAO */
}

/* ===============================
   IMAGE
=============================== */
.meet-team__photo {
  position: relative;
  width: 100%;
  border-radius: 18px;
  overflow: hidden;
  background: rgba(0,0,0,.06);
  aspect-ratio: 4 / 3;
  flex-shrink: 0;         /* üîí KH√ìA ·∫¢NH */
}

.meet-team__photo img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .4s ease;
}

.meet-team__photo img:hover {
  transform: scale(1.05);
}

/* ===============================
   TEXT
=============================== */
.meet-team__name {
  margin: 10px 0 6px;
  font-size: 28px;
  line-height: 1.05;
  font-weight: 900;
  text-transform: uppercase;
}

.meet-team__cred {
  margin: 0 0 14px;
  font-size: 13px;
  font-weight: 600;
  opacity: .9;
}

.meet-team__bio {
  flex-grow: 1;           /* üî• GI√ÉN N·ªòI DUNG */
  max-width: 54ch;
  font-size: 13px;
  line-height: 1.6;
  color: rgba(0,0,0,.78);
}

.meet-team__bio p {
  margin: 0 0 10px;
}

.meet-team__bio p:last-child {
  margin-bottom: 0;
}

/* ===============================
   CENTER TEXT
=============================== */
.meet-team__eyebrow {
  font-size: 12px;
  letter-spacing: .08em;
  text-transform: uppercase;
  opacity: .7;
  margin-bottom: 14px;
}

.meet-team__heading {
  margin: 0 0 18px;
  font-size: 62px;
  line-height: .95;
  font-weight: 900;
  text-transform: uppercase;
}

.meet-team__desc {
  font-size: 15px;
  line-height: 1.65;
  opacity: .9;
  max-width: 44ch;
  margin: 0 auto;
}

/* ===============================
   MOBILE ‚Äì RESET HEIGHT
=============================== */
@media (max-width: 990px) {
  .meet-team__grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .meet-team__center,
  .meet-team__side {
    position: static;
    top: auto;
  }

  .meet-team__center {
    order: -1;
    text-align: left;
    padding-top: 0;
  }

  .meet-team__heading {
    font-size: 40px;
  }

  .meet-team__desc {
    margin: 0;
    max-width: none;
  }

  .meet-team__name {
    font-size: 22px;
  }

  .meet-team__bio {
    max-width: none;
    font-size: 12.5px;
  }

  .meet-team__person {
    height: auto;         /* üîÑ MOBILE T·ª∞ NHI√äN */
  }
}

</style>

