      "unit": "px",
      "label": "Kích thước logo",
      "default": 160
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Màu nền section",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding trên",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding dưới",
      "default": 100
    },
    {
      "type": "header",
      "content": "Thanh ngang trên đầu"
    },
    {
      "type": "color",
      "id": "top_divider_color",
      "label": "Màu thanh ngang",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "top_divider_thickness",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Độ dày",
      "default": 2
    },
    {
      "type": "range",
      "id": "top_divider_width",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Chiều rộng",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "member",
      "name": "Thành viên team",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ảnh thành viên"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Tên",
          "default": "PROF. JULIAN HILL"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Chức danh",
          "default": "BSc, PhD"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Mô tả / Bio",
          "default": "<p>Leading expert in dermatology with over 20 years of experience...</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Our Team",
      "blocks": [
        { "type": "member" },
        { "type": "member" },
        { "type": "member" },
        { "type": "member" },
        { "type": "member" },
        { "type": "member" }
      ]
    }
  ]
}
{% endschema %}