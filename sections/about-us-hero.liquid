{% comment %}
  Section Name: About Us Hero Text - Advanced
  Description: Hero text with separate alignment, up to 3 subheadings in one line, custom settings + subheading color.
{% endcomment %}

{% schema %}
{
  "name": "About Us Hero Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Tiêu đề chính",
      "default": "ABOUT SALVARITY®"
    },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Căn lề tiêu đề chính",
      "options": [
        { "value": "left", "label": "Trái" },
        { "value": "center", "label": "Giữa" },
        { "value": "right", "label": "Phải" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 40,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Cỡ chữ tiêu đề",
      "default": 64
    },
    {
      "type": "text",
      "id": "subheading_1",
      "label": "Phụ đề 1",
      "default": "SCIENCE BACKED"
    },
    {
      "type": "checkbox",
      "id": "show_subheading_1",
      "label": "Hiển thị phụ đề 1",
      "default": true
    },
    {
      "type": "text",
      "id": "subheading_2",
      "label": "Phụ đề 2",
      "default": "AUSTRALIAN SKINCARE"
    },
    {
      "type": "checkbox",
      "id": "show_subheading_2",
      "label": "Hiển thị phụ đề 2",
      "default": true
    },
    {
      "type": "text",
      "id": "subheading_3",
      "label": "Phụ đề 3",
      "default": "abc"
    },
    {
      "type": "checkbox",
      "id": "show_subheading_3",
      "label": "Hiển thị phụ đề 3",
      "default": false
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Màu chữ phụ đề (riêng)",
      "default": "#d32f2f",
      "info": "Nếu để trống, sẽ dùng màu chữ chung"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 24,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Cỡ chữ phụ đề",
      "default": 40
    },
    {
      "type": "range",
      "id": "subheading_letter_spacing",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Khoảng cách chữ phụ đề",
      "default": 2
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Câu slogan (tagline)",
      "default": "Clean by Nature - Proven by Science"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Mô tả ngắn (hỗ trợ xuống dòng, đậm, nghiêng, danh sách)",
      "default": "<p>At Salvariety®, we're redefining what it means to care for your skin — with high-performance, science-backed formulas that <strong>support, not strip</strong>.</p><p>Rooted in Australian skincare innovation, our clean, effective products are made for real life and real skin — especially <em>young, breakout-prone skin</em>.</p><ul><li>Science First, Always</li><li>Clean by Nature</li><li>Proven Results</li></ul>"
    },
    {
      "type": "select",
      "id": "description_align",
      "label": "Căn lề mô tả",
      "options": [
        { "value": "left", "label": "Trái" },
        { "value": "center", "label": "Giữa" },
        { "value": "right", "label": "Phải" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 16,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Cỡ chữ mô tả",
      "default": 18
    },
    {
      "type": "range",
      "id": "description_max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Chiều rộng tối đa mô tả",
      "default": 800
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Màu chữ chung",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Màu nền section",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Khoảng cách trên",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Khoảng cách dưới",
      "default": 120
    }
  ],
  "presets": [
    {
      "name": "About Us Hero Text"
    }
  ]
}
{% endschema %}

<section class="about-hero-text" style="background: {{ section.settings.background_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
    <!-- Tiêu đề chính -->
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading" style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.heading_size }}px; font-weight: 900; letter-spacing: -2px; margin: 0 0 1rem; text-align: {{ section.settings.heading_align }};">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    <!-- Phụ đề (nằm ngang) -->
    <div class="subheadings" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 40px; margin-bottom: 2rem;">
      {% assign sub_color = section.settings.subheading_color | default: section.settings.text_color %}
      {% if section.settings.show_subheading_1 and section.settings.subheading_1 != blank %}
        <h2 class="hero-subheading" style="color: {{ sub_color }}; font-size: {{ section.settings.subheading_size }}px; font-weight: 700; letter-spacing: {{ section.settings.subheading_letter_spacing }}px; margin: 0;">
          {{ section.settings.subheading_1 }}
        </h2>
      {% endif %}
      {% if section.settings.show_subheading_2 and section.settings.subheading_2 != blank %}
        <h2 class="hero-subheading" style="color: {{ sub_color }}; font-size: {{ section.settings.subheading_size }}px; font-weight: 700; letter-spacing: {{ section.settings.subheading_letter_spacing }}px; margin: 0;">
          {{ section.settings.subheading_2 }}
        </h2>
      {% endif %}
      {% if section.settings.show_subheading_3 and section.settings.subheading_3 != blank %}
        <h2 class="hero-subheading" style="color: {{ sub_color }}; font-size: {{ section.settings.subheading_size }}px; font-weight: 700; letter-spacing: {{ section.settings.subheading_letter_spacing }}px; margin: 0;">
          {{ section.settings.subheading_3 }}
        </h2>
      {% endif %}
    </div>

    <!-- Tagline -->
    {% if section.settings.tagline != blank %}
      <p class="hero-tagline" style="color: {{ section.settings.text_color }}; font-size: 1.8rem; font-weight: 300; text-align: center; margin: 0 0 2rem;">
        {{ section.settings.tagline }}
      </p>
    {% endif %}

    <!-- Mô tả ngắn (hỗ trợ richtext) -->
    {% if section.settings.description != blank %}
      <div class="hero-description-wrapper" style="text-align: {{ section.settings.description_align }};">
        <div class="hero-description rte" style="color: {{ section.settings.text_color }}; max-width: {{ section.settings.description_max_width }}px; margin: 0 auto; font-size: {{ section.settings.description_size }}px; line-height: 1.8;">
          {{ section.settings.description }}
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .hero-description-wrapper .rte {
    text-align: inherit;
  }
  .hero-description-wrapper .rte p {
    margin: 0 0 1.2em;
  }
  .hero-description-wrapper .rte strong {
    font-weight: 700;
  }
  .hero-description-wrapper .rte em {
    font-style: italic;
  }
  @media (max-width: 768px) {
    .subheadings {
      flex-direction: column;
      gap: 20px;
      justify-content: center;
    }
    .hero-heading { font-size: calc({{ section.settings.heading_size }}px * 0.8); }
    .hero-subheading { font-size: calc({{ section.settings.subheading_size }}px * 0.8); }
    .hero-tagline { font-size: 1.4rem; }
    .hero-description { font-size: calc({{ section.settings.description_size }}px * 0.9); }
  }
</style>